{
	"name": "claw-browser-automation",
	"version": "0.4.0",
	"description": "Reliable browser automation layer for OpenClaw",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": "./dist/index.js",
		"./plugin": "./dist/plugin.js"
	},
	"openclaw": {
		"extensions": [
			"./dist/plugin.js"
		]
	},
	"files": [
		"dist",
		"openclaw.plugin.json"
	],
	"scripts": {
		"check": "biome check .",
		"check:fix": "biome check --fix .",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"typecheck": "tsc --noEmit",
		"verify": "npm run lint && npm run typecheck && npm run format && npm run check && npm run test",
		"build": "tsc",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"keywords": [
		"openclaw",
		"browser",
		"automation",
		"playwright"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/ametel01/claw-browser-automation"
	},
	"author": "ametel01",
	"engines": {
		"node": ">=22.12.0"
	},
	"dependencies": {
		"@sinclair/typebox": "^0.34.48",
		"better-sqlite3": "^12.6.2",
		"nanoid": "^5.1.6",
		"pino": "^10.3.1",
		"playwright-core": "^1.58.2"
	},
	"peerDependencies": {
		"openclaw": ">=2026.2"
	},
	"peerDependenciesMeta": {
		"openclaw": {
			"optional": true
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.15",
		"@types/better-sqlite3": "^7.6.13",
		"@types/node": "^25.2.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
